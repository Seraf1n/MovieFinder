<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:menu="@menu/toolbar"
            app:navigationIcon="@drawable/ic_round_menu"
            app:title="@string/page_title" />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/headMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_margin="@dimen/layOutMargin"
        android:elevation="@dimen/elevation"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/avngrs_end_game"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/avngrs_inf_war"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cpt_america_civil_war"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dr_strange_multiverse_of_madness"
                tools:ignore="ContentDescription" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layOutMargin"
        android:autoLink="web"
        android:gravity="center|top"
        android:linksClickable="true"
        android:minHeight="@dimen/minTouchTarget"
        android:text="@string/movie_posters"
        android:textColor="?colorOnPrimaryContainer"
        android:textColorLink="?colorOnPrimary"
        android:textSize="@dimen/textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headMenu" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.MaterialComponents.ActionBar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        app:itemTextColor="?colorOnBackground"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layOutMargin"
        android:columnCount="2"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:layoutAnimation="@anim/layout_animation"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.cardview.widget.CardView
            android:id="@+id/poster_1"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:clickable="true"
            android:focusable="true"
            android:onClick="postersOnClickListeners"
            android:stateListAnimator="@animator/animator"
            app:cardCornerRadius="@dimen/cornerRadius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop"
                android:src="@drawable/wanda_vision" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/poster_2"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            android:clickable="true"
            android:focusable="true"
            android:onClick="postersOnClickListeners"
            android:stateListAnimator="@animator/animator"
            app:cardCornerRadius="@dimen/cornerRadius">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop"
                android:src="@drawable/black_panther" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/poster_3"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            app:cardCornerRadius="@dimen/cornerRadius"
            android:clickable="true"
            android:focusable="true"
            android:onClick="postersOnClickListeners"
            android:stateListAnimator="@animator/animator">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/loki"
                android:contentDescription="@string/content_description"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/poster_4"
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_height"
            app:cardCornerRadius="@dimen/cornerRadius"
            android:clickable="true"
            android:focusable="true"
            android:onClick="postersOnClickListeners"
            android:stateListAnimator="@animator/animator">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flash"
                android:contentDescription="@string/content_description"/>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>